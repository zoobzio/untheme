{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "preserve",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "baseUrl": ".",
    "rootDir": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@untheme/colors": ["packages/colors/src"],
      "@untheme/config": ["packages/config/src"],
      "@untheme/core": ["packages/core/src"],
      "@untheme/kit": ["packages/kit/src"],
      "@untheme/nuxt": ["packages/nuxt/src"],
      "@untheme/schema": ["packages/schema/src"],
      "untheme": ["packages/untheme/src"],
    },
    "resolveJsonModule": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  }
}
